% Inputs a gel image and comments it. Width can be specified optionally.
% This accesses the vectors and variables (defaults shown here):
\newcommand{\lanetextrotation}{0} % Degrees rotation each lane text should have
\newcommand{\textsize}{\scriptsize} % Font size
\newcommand{\lanetexts}{} % Text specifying the contents of each lane
\newcommand{\markertexts}{} % Marker sizes
\newcommand{\markerunit}{} % Marker unit (typically bp or kDa), printed above marker sizes
\newcommand{\markerleft}{1} % Side of gel where the marker is printed, either left or right
\newcommand{\groups}{} % Groups in the format startlane/endlane/text

\newcommand{\gel}[2][]{%
\begin{tikzpicture}
    \node[align=center, anchor=south west,inner sep=0] (image) at (0,0) {\includegraphics[#1]{#2}};
    \begin{scope}[x={(image.south east)},y={(image.north west)}]
        % Determine lane text anchor, should be south for no rotation (default) and south west for rotated text (like 30, 45 or 60 degrees)
        "\ifthenelse{\lanetextrotation=0}{
            \def\lanetextanchor{south}}{
            \def\lanetextanchor{south west}}"
        % Draw lane names
        \def\laneindex{0}
        \foreach[count=\laneindex] \x/\t in \lanetexts {
            \node[anchor=\lanetextanchor, rotate=\lanetextrotation, minimum height =.5cm] (\laneindex) at (\x,0.99) {\textsize\t};
        }
        % Draw marker unit
        "\ifthenelse{\markerleft=1}{
            \node[anchor=south east] at (0.02, 0.99) {\textsize\si{\markerunit}};}{
            \node[anchor=south west] at (0.98, 0.99) {\textsize\si{\markerunit}};}"
        % Draw marker
        \foreach \y/\t in \markertexts {
            "\ifthenelse{\markerleft=1}{
                \node[anchor=east] at (0.02, \y) {\textsize\t--};}{
                \node[anchor=west] at (0.98, \y) {\textsize--\t};}"
        }
        % Draw groups
        \def\y{1.08}
        \foreach \start/\end/\text in \groups {
            \draw (\start.north west) -- node[above]{\textsize\text} (\end.north east);
        }
        % Renew default values
        \renewcommand{\lanetextrotation}{0}
        \renewcommand{\textsize}{\scriptsize}
        \renewcommand{\lanetexts}{}
        \renewcommand{\markertexts}{}
        \renewcommand{\markerunit}{}
        \renewcommand{\markerleft}{1}
        \renewcommand{\groups}{}
    \end{scope}
\end{tikzpicture}}

